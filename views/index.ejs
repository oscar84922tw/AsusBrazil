<% include ./header %>

<h1>Invoice</h1>
<form method="post" action="/add_invoice">
    Invoice_No:&nbsp;&nbsp;<input name="Invoice_No" type="text"><br/><br/>
    Invoice_Date:&nbsp;&nbsp;<textarea name="Invoice_Date"></textarea><br/><br/>
    c_name:&nbsp;&nbsp;<textarea name="c_name"></textarea><br/><br/>
